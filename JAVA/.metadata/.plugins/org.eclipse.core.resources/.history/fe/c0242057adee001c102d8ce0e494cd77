	    while (produtos < 15) {
	    	System.out.print("Qual a categoria do produto: ");
	    	System.out.println("[C] - Cama, mesa e banho");
			System.out.println("[E] - Eletrodomésticos");
			System.out.println("[V] - Vestuário");
			char opcao = sc.next().charAt(0);
	    }
	    sc.close();
	}
}